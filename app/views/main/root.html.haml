%div(style='margin: 0 auto; width: 1000px')
  %div(style='float: right; width: 200px; background-color: #ccc; padding: 20px')
    %h2 Links
    %ul
      - @sidebar_links.each do |link|
        %li
          %a(target='_new'){href: link.url}= link.name

  - LessonPlan.order(:date).each do |plan|
    %h1 #{plan.date.strftime('%a %b %-d')}: #{plan.topic}

    %ul
      %li
        %a{href: '/lessons/' + plan.date.strftime('%m-%d')}
          Lesson plan
      %li
        Videos
      %li
        %a{href:plan.handout_url} Handout

      - Exercise.order(:id).each do |exercise|
        %li
          %a{href: "/exercises/#{exercise.id}"}
            Exercise #{exercise.id} - #{exercise.first_line}
